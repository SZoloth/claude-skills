  "cross_domain_patterns": {
    "strategic_avoidance": {
      "manifests_in": ["career", "emotional_health", "relationships", "personal_development"],
      "signals": [
        "elaborate system creation",
        "perfectionism blocking action",
        "research over execution",
        "optimization instead of implementation"
      ],
      "intervention": "Small brave steps, time-boxed action, edge question practice"
    },
    "perfectionism": {
      "manifests_in": ["career", "fitness", "personal_development", "relationships"],
      "signals": [
        "over-preparation",
        "delaying until 'perfect'",
        "frustration with imperfection",
        "high standards blocking action"
      ],
      "intervention": "Practice 'good enough' threshold, celebrate imperfect action, flexible mind practice"
    },
    "withdrawal_when_hurt": {
      "manifests_in": ["relationships", "career", "emotional_health"],
      "signals": [
        "going silent after hurt feelings",
        "disengaging after rejection",
        "creating distance to protect",
        "isolating instead of reaching out"
      ],
      "intervention": "Opposite action, self-disclosure practice, 'I' statements, staying engaged"
    },
    "low_self_disclosure": {
      "manifests_in": ["relationships", "career", "emotional_health"],
      "signals": [
        "keeping feelings private",
        "curated self-presentation",
        "minimizing vulnerability",
        "sharing only 'acceptable' parts"
      ],
      "intervention": "Graduated vulnerability, internal state sharing, asking for support"
    },
    "detail_focused_processing": {
      "manifests_in": ["career", "personal_development", "life_infrastructure"],
      "signals": [
        "lost in details, missing big picture",
        "over-planning and over-preparing",
        "analysis paralysis",
        "gathering more data to delay decision"
      ],
      "intervention": "Big picture practice, time-boxed decisions, trust intuition"
    }
  },
  "routing_rules": {
    "single_domain": {
      "threshold": "3+ keywords from single domain",
      "action": "delegate_to_specialist"
    },
    "multi_domain": {
      "threshold": "2+ keywords from 2+ domains",
      "action": "run_integration_engine"
    },
    "conflicting_priorities": {
      "signals": [
        "should I focus on X or Y",
        "don't have time for both",
        "competing priorities",
        "resource allocation"
      ],
      "action": "run_integration_engine --mode=priority"
    },
    "pattern_spanning": {
      "signals": [
        "same pattern in multiple areas",
        "recurring issue",
        "pattern recognition",
        "cross-domain challenge"
      ],
      "action": "run_integration_engine --mode=patterns"
    },
    "synthesis_request": {
      "signals": [
        "how am I doing",
        "overall progress",
        "life review",
        "weekly review",
        "momentum check"
      ],
      "action": "run_integration_engine --mode=synthesis"
    },
    "opportunity_scan": {
      "signals": [
        "how can I leverage",
        "integration opportunities",
        "compound efforts",
        "synergies"
      ],
      "action": "run_integration_engine --mode=opportunities"
    }
  },
